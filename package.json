{
  "name": "ng2-reduce-size",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:prod": "npm run build:prod && npm run serve:prod",
    "start:aot": "npm run build:aot && node copy-dist-files --dest=aot --index=aot && npm run serve:aot",
    "start:closure": "npm run build:closure && node copy-dist-files --dest=test/src-closure --index=closure && npm run serve:closure",

    "build": "ng build",
    "build:prod": "ng build --prod",
    "build:aot": "ngc -p tsconfig-aot.json && rollup -c rollup-config.js",
    "build:closure": "ngc -p tsconfig-closure.json && npm run closure",

    "serve:prod": "ng serve --environment=prod --target=production",
    "serve:aot": "lite-server -c test/browser-aot.config.json",
    "serve:closure": "lite-server -c test/browser-closure.config.json",

    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "aot": "node_modules/.bin/ngc -p tsconfig-aot.json",
    "rollup": "node_modules/.bin/rollup -c rollup-config.js",
    "explorer": "node_modules/.bin/source-map-explorer aot/dist/build.js",
    "closure": "java -jar node_modules/google-closure-compiler/compiler.jar --flagfile closure.conf"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^4.1.1",
    "@angular/compiler": "^4.1.1",
    "@angular/compiler-cli": "^4.1.1",
    "@angular/core": "^4.1.1",
    "@angular/forms": "^4.1.1",
    "@angular/http": "^4.1.1",
    "@angular/platform-browser": "^4.1.1",
    "@angular/platform-browser-dynamic": "^4.1.1",
    "@angular/platform-server": "^4.1.1",
    "@angular/router": "^4.1.1",
    "core-js": "^2.4.1",
    "rxjs": "^5.4.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "1.0.1",
    "@angular/compiler-cli": "^4.1.1",
    "@angular/tsc-wrapped": "^4.1.1",
    "@types/jasmine": "^2.5.47",
    "@types/node": "~6.0.60",
    "codelyzer": "~2.0.0",
    "google-closure-compiler": "^20170409.0.0",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.0",
    "rollup": "^0.41.6",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^1.0.2",
    "source-map-explorer": "^1.3.3",
    "ts-node": "~2.0.0",
    "tsickle": "^0.2.3",
    "tslint": "~4.5.0",
    "typescript": "~2.2.0"
  }
}
